#!/usr/bin/python3
"""This function print integers representing Pascal' triangle"""

def print_triangle(triangle):
    if n <= 0:
      return []

    # Initialize the triangle with the first row
    triangle = [[1]]

    # Generate the next rows
    for i in range(1, n):
    # Create a new row with the same length as the previous row
        row = [0] * (i + 1)

        # Fill in the row based on the previous row
        for j in range(i + 1):
            if j == 0 or j == i:
                row[j] = 1
            else:
                row[j] = triangle[i - 1][j - 1] + triangle[i - 1][j]

        # Add the row to the triangle
        triangle.append(row)

    return triangle
